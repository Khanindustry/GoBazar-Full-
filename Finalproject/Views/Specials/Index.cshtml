@model VmHome
@{ ViewData["Title"] = "Index"; }

<section id="titleforall">
    <div class="titlecontact">
        <i class="fa-solid fa-house"></i>
        <p>Specials</p>
    </div>

</section>


<section id="left">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="row">
                    <div class="container">
                        <div class="row">
                            @foreach (var item in Model.Products)
                            {

                                {
                                    DateTime? itemDiscount = item.DiscountDate;
                                    if (itemDiscount != null && itemDiscount > DateTime.Now)
                                    {

                <div class="col-lg-4   col-md-4 col-6  specialsimage">
                    <div class="card">
                        <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.Id">
                            <img src="~/UploadsProducts/@item.Image" alt="">
                        </a>

                        <span class="specialspan">@item.Discountfaiz</span>
                        <div class="card-body">
                            <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.Id">
                                <h6 class="card-title">@item.Model (@item.Color) </h6>
                            </a>

                            <div class="d-flex">
                                <h5 class="latestp1">@item.DiscountPrice</h5>
                                <p class="latestp2">@item.Price</p>
                            </div>
                            <i class="fa-solid fa-cart-shopping c1"></i>
                            <a asp-controller="Product" asp-action="addToCart" asp-route-id="@item.Id" class="btn   @(Model.Cart2 != null && Model.Cart2.Any(c => c == item.Id.ToString()) == true ? "foradd2" : "foradd")">Add to cart</a>
                        </div>
                    </div>
                </div>}


        }

    }
                        </div>
                    </div>

                </div>
                
            </div>


            <div class="col-lg-4">
                <div class="forborder">
                    <h5>Information</h5>
                    <a href="">
                        <p>About us</p>
                    </a>
                    <a href="">
                        <p>Delivery Information </p>
                    </a>
                    <a href="">
                        <p>Privacy Policy </p>
                    </a>
                    <a href="">
                        <p>Terms & Conditions </p>
                    </a>
                    <a href="">
                        <p>Contact Us </p>
                    </a>
                </div>

                @foreach (var item in Model.Advertisings)
                {
            <div>
                <a href="@item.Link"><img class="reklamucun" src="~/UploadsAdvertising/@item.Image" alt=""></a>
            </div>}
                <div class="forborder">
                    <h5>Latest</h5>

                    @{ int v = 0; }
                    @foreach (var item in Model.Products.OrderByDescending(m => m.Category))
                    {
                        if (v < 3)
                        {
                            DateTime? itemDiscount = item.DiscountDate;
                            if (itemDiscount != null && itemDiscount > DateTime.Now)
                            {
            <div class="d-flex forhoverimage">
                <a asp-controller="Product" asp-action="ProductDetails" asp-route-id="@item.Id">

                    <img src="~/UploadsProducts/@item.Image" alt="">
                    <div class="latest">
                        <p> @item.Brand (@item.Model)</p>
                        <div class="d-flex">
                            <p class="latestp1">@item.DiscountPrice</p>
                            <p class="latestp2">@item.Price</p>
                        </div>
                    </div>

                </a>

            </div>v++;
        }

    }

}



                </div>

            </div>



        </div>


    </div>
</section>


<section id="button">
    <a class="top_button" title="Back To Top" href="#" style="display: block;"></a>
</section>


