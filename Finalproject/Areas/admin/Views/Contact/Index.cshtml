
@model List<Contact>
@{
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}



    <div class="row">
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Content</th>
                        <th scope="col">Date</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0; }
                    @foreach (var item in Model)
                    {
                        i++;
                    <tr>
                        <th scope="row">@i</th>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@(item.Destiraction.Length>100? item.Destiraction.Substring(0,100)+"...": item.Destiraction)</td>
                        <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm:ss")</td>
                        <td>
                            <a asp-area="admin" asp-controller="Contact" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                        </td>
                        <td>
                            <a  class="btn btn-warning" asp-area="admin" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


